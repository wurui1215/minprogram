<view class="userinfo">
  <view class="portrait">
    <view wx:if="{{userInfo}}" class="userinfo-avatar">
      <image src="{{userInfo.avatarUrl}}"></image>
      <text>{{userInfo.nickName}}</text>
    </view>
    <view class="getUserInfo" wx:if="{{!userInfo}}">
      <button bindtap="getUserInfo">获取</button>
    </view>
  </view>
  
</view>